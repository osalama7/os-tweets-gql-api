{
  "name": "os-tweets-gql-api",
  "private": true,
  "description": "GQL api providing data for Tweet analytics",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "build": "npm run generate:prisma && npm run codegen && tsc",
    "codegen": "graphql-codegen",
    "generate:prisma": "prisma generate",
    "postinstall": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --exec \"npm run build && npm run start\" --ignore ./src/__generated__/ --ignore ./src/datasources/tweets-datasource.ts",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "graphql": "^16.8.1",
    "@prisma/client": "^5.4.2",
    "@prisma/mongodb": "^5.4.2",
    "graphql-tag": "latest"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.23",
    "prisma": "5.4.2",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
